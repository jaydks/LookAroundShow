<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_show"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_show_baseline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/splashBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_show" />

    <TextView
        android:id="@+id/tv_show_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:breakStrategy="balanced"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="뮤지컬 레배카 10주년 기념 앙코르"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_show"
        app:layout_constraintTop_toTopOf="@id/iv_show" />

    <TextView
        android:id="@+id/tv_show_hall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:breakStrategy="balanced"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="LG아트센터 서울 LG SIGNATURE 홀"
        android:textColor="@color/gray"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_show_title"
        app:layout_constraintTop_toBottomOf="@id/tv_show_title" />

    <TextView
        android:id="@+id/tv_show_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:breakStrategy="balanced"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="2023.12.14 ~ 2024.02.24"
        android:textColor="@color/gray"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_show_hall"
        app:layout_constraintTop_toBottomOf="@id/tv_show_hall" />

    <CheckBox
        android:id="@+id/cb_show_heart"
        android:layout_width="11dp"
        android:layout_height="13dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/background_heart"
        android:button="@android:color/transparent"
        android:checked="false"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/iv_show"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>